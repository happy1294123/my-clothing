{
    "openapi": "3.0.0",
    "info": {
        "title": "my-clothing",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://dev.laravel-sail.site:8080",
            "description": "expose主機"
        },
        {
            "url": "http://localhost:8888",
            "description": "本地主機"
        }
    ],
    "paths": {
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "查找所有商品列表",
                "operationId": "3835b370631f24cdb2089b2f8ecdcec9",
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/products"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/{category_name}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "根據分類名稱，查找商品列表",
                "operationId": "9202c78f3bf22ade93f63a793e7f7c8e",
                "parameters": [
                    {
                        "name": "category_name",
                        "in": "path",
                        "description": "分類名稱",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "上衣"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/products"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "分類名稱有誤",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "message": "category name error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/{category_name}/{product_id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "根據分類名稱和商品id，查找指定商品",
                "operationId": "5b980c9c6e9624889256d06f6831ec5c",
                "parameters": [
                    {
                        "name": "category_name",
                        "in": "path",
                        "description": "分類名稱",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": "上衣"
                        }
                    },
                    {
                        "name": "product_id",
                        "in": "path",
                        "description": "商品id",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "default": 2
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/productsWithInventories"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "分類名稱有誤",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "message": "category name error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/recommend": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "隨機生成5個推薦商品",
                "operationId": "7c3fd50e975b23a0f8445b86b14d8d88",
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/products"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "image": {
                "type": "object",
                "example": {
                    "id": 1,
                    "url": "https://via.placeholder.com/640x480.png/002255?text=dolorem"
                }
            },
            "inventory": {
                "type": "object",
                "example": {
                    "id": 1,
                    "color": "黑色",
                    "size": "M",
                    "amount": 3
                }
            },
            "product": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "NBA Sideline Pullover Satin Jacket 防風套衫 湖人 紫"
                    },
                    "price": {
                        "type": "integer",
                        "example": "1300"
                    },
                    "intro": {
                        "type": "string",
                        "example": "this is introduction"
                    },
                    "status": {
                        "description": "刪除、上架、下架",
                        "type": "integer",
                        "example": "上架"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/components/schemas/image"
                                },
                                {
                                    "$ref": "#/components/schemas/image"
                                },
                                {
                                    "$ref": "#/components/schemas/image"
                                }
                            ]
                        }
                    },
                    "category": {
                        "type": "object",
                        "example": {
                            "id": 5,
                            "name": "上衣"
                        }
                    }
                },
                "type": "object"
            },
            "productsWithInventories": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "NBA Sideline Pullover Satin Jacket 防風套衫 湖人 紫"
                    },
                    "price": {
                        "type": "integer",
                        "example": "1300"
                    },
                    "intro": {
                        "type": "string",
                        "example": "this is introduction"
                    },
                    "status": {
                        "description": "刪除、上架、下架",
                        "type": "integer",
                        "example": "上架"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/components/schemas/image"
                                },
                                {
                                    "$ref": "#/components/schemas/image"
                                },
                                {
                                    "$ref": "#/components/schemas/image"
                                }
                            ]
                        }
                    },
                    "category": {
                        "type": "object",
                        "example": {
                            "id": 5,
                            "name": "上衣"
                        }
                    },
                    "inventories": {
                        "type": "array",
                        "items": {
                            "anyOf": [
                                {
                                    "$ref": "#/components/schemas/inventory"
                                },
                                {
                                    "$ref": "#/components/schemas/inventory"
                                },
                                {
                                    "$ref": "#/components/schemas/inventory"
                                }
                            ]
                        }
                    }
                },
                "type": "object"
            },
            "products": {
                "type": "array",
                "items": {
                    "anyOf": [
                        {
                            "$ref": "#/components/schemas/product"
                        },
                        {
                            "$ref": "#/components/schemas/product"
                        },
                        {
                            "$ref": "#/components/schemas/product"
                        },
                        {
                            "$ref": "#/components/schemas/product"
                        },
                        {
                            "$ref": "#/components/schemas/product"
                        }
                    ]
                }
            }
        }
    }
}