{
    "openapi": "3.0.0",
    "info": {
        "title": "my-clothing",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8888",
            "description": "本地主機"
        },
        {
            "url": "http://dev.laravel-sail.site:8080",
            "description": "expose主機"
        }
    ],
    "paths": {
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "商品列表",
                "operationId": "1bfaa78d1c2c3848ab8165c5dadcad3e",
                "parameters": [
                    {
                        "name": "category",
                        "in": "query",
                        "description": "分類名稱",
                        "schema": {
                            "type": "string",
                            "default": "上衣"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/products"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "分類名稱有誤",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "message": "category name error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/{product_id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "根據商品id，查找指定商品",
                "operationId": "3b646880fbf58e1a9d37fad9bfed30bb",
                "parameters": [
                    {
                        "name": "product_id",
                        "in": "path",
                        "description": "商品id",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "default": 2
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/productsWithInventories"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "商品id有誤",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "message": "product id does not exists"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/recommend": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "隨機生成5個推薦商品",
                "operationId": "7c3fd50e975b23a0f8445b86b14d8d88",
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/products"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "註冊會員",
                "operationId": "2f25885f3b6f61ca11724ec302d2e439",
                "requestBody": {
                    "request": "RegisterRequestBody",
                    "description": "註冊會員的請求範例",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "allen"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "allen@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "12345678"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "example": "12345678"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": ""
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": ""
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "409": {
                        "description": "email已經被使用過",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "message": "email already exist"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證請求有誤",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/validateError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "登入",
                "operationId": "abc53c091ac89d7a2af0892997d1ee08",
                "requestBody": {
                    "request": "LoginRequestBody",
                    "description": "登入會員的請求範例",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "allen@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "12345678"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "user": {
                                        "id": 1,
                                        "name": "allen",
                                        "email": "allen@example.com",
                                        "phone": "0912345678",
                                        "address": null
                                    },
                                    "token": "2|UvEntO7H9iN4SF9eJYPNCxVbBN8V0Nv5TnANWUO9"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "email或password有誤",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "message": "Credentials do not match records"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "登出",
                "operationId": "67d5147477c548bfbc3f982833bbc7bd",
                "responses": {
                    "204": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/user": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "用戶資料",
                "operationId": "9cd1cee912e0176094a7ec83cc9b432f",
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/userInfo"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
